<?xml version="1.0" encoding="UTF-8" ?>
<c3p0-config>
	<default-config> 
		<property name="jdbcUrl">
			<![CDATA[
				jdbc:mysql://localhost:3306/wxos?useUnicode=true&characterEncoding=UTF8&useServerPrepStmts=true&prepStmtCacheSqlLimit=256&cachePrepStmts=true&prepStmtCacheSize=256&rewriteBatchedStatements=true
			]]>
		</property>
		<property name="driverClass">com.mysql.jdbc.Driver</property>
		<property name="user">root</property>
		<property name="password">root</property>
		 <!-- 如果池中数据连接不够时一次增长多少个 -->
		<property name="acquireIncrement">3</property>
		<!-- 初始化数据库连接池的数量 -->
		<property name="initialPoolSize">10</property>
		<!-- 数据库中最小的数据库连接数 -->
		<property name="minPoolSize">2</property>
		<!-- 数据库中最大的数据库连接数 ,当数据连接超过最大连接数时,资源将加入等待队列,等待空闲的连接-->
		<property name="maxPoolSize">10</property>
	</default-config>
</c3p0-config>